<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration>
<Configuration status="debug" name="CHPLService" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{ISO8601} %-5p (%t) [%c{1}(%M:%L)] %m%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.jose4j" level="WARN" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="springfox.documentation" level="WARN"
            additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="org.hibernate" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <!-- Logging for hibernate stuff. Leave off generally -->
        <!-- <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT" /> </Logger> -->
        <Logger name="org.springframework" level="INFO"
            additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="net.sf.ehcache" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="gov.healthit.chpl" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>
